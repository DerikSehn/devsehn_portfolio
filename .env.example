# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here

# Email Configuration (for Kanban notifications & weekly analytics report)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Analytics — Weekly traffic report
# Secret used to authenticate the /api/analytics/report cron endpoint.
# Set the same value in your Vercel project settings → Environment Variables.
CRON_SECRET=replace_with_a_random_secret_string

# Optional: Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Optional: Database (for future features)
DATABASE_URL=your_database_connection_string
